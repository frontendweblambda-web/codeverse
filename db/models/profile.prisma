model Profile {
  id          String         @id @default(cuid()) @map("profile_id")
  userId      String         @unique
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  bio         String?
  profession  String?
  designation String?
  exp         String?
  salary      Float          @default(0.0)
  resume      String?
  company     String?
  address     String?
  github      String?
  linkedin    String?
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")
  skills      ProfileSkill[]

  @@map("profile")
}
