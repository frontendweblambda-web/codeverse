model Role {
  id   String @id @default(cuid()) @map("role_id")
  name String @unique
  slug String @unique

  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime         @updatedAt @map("updated_at")
  permissions RolePermission[]
  users       UserRole[]
  invitations Invitation[]

  @@map("roles")
}

enum RoleScope {
  TENANT
  WORKSPACE
}
