model Role {
  id          String           @id @default(cuid()) @map("role_id")
  name        String           @unique
  slug        String           @unique
  permissions RolePermission[]
  users       UserRole[]
  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime         @updatedAt @map("updated_at")
  Invitation  Invitation[]

  @@map("roles")
}
